      Renew <span class="font-light text-pink-600">Beauty Inc</span>
    </a>

    <!-- Botón móvil -->
    <button id="menu-btn" class="md:hidden text-2xl text-gray-700">
      ☰
    </button>

    <!-- Overlay -->
    <div
      id="overlay"
      class="hidden fixed inset-0 bg-black/40 z-40 md:hidden">
    </div>

    <!-- Menú móvil -->
    <ul
      id="menu"
      class="fixed top-0 right-0 h-full w-72 bg-white z-50
             flex flex-col items-center justify-center gap-8
             text-sm uppercase tracking-widest text-gray-700
             transform translate-x-full transition-transform duration-300
             md:static md:translate-x-0 md:flex-row md:h-auto md:w-auto
